{
    "extends": "./node_modules/@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "strict": false,
        "verbatimModuleSyntax": false,
        "allowJs": true,
        "noEmit": true,
        "baseUrl": ".",
        "target": "es6",
        "lib": ["dom", "es6", "es2017"],
        "typeRoots": ["types", "node_modules/@types"],
        "paths": {
            "~src/*": ["src/*"],
            "~resources/*": ["resources/*"]
        }
    },
    "include": ["./src/**/*", "./test/**/*", "./webpack.config.*", "jest.config.ts"]
}
