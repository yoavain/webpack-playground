{
    "name": "webpack-playground",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "npm run eslint && npm run type-check && npm run test && npm run webpack",
        "start:dev": "webpack-dev-server",
        "eslint": "eslint src/ test/",
        "eslint:fix": "npm run eslint -- --fix",
        "prettier": "prettier --write *.json .eslintrc.json .prettierrc tsconfig.json webpack.config.js",
        "test": "jest --coverage",
        "type-check": "tsc --build tsconfig.all.json",
        "webpack": "webpack",
        "webpack-analyze": "webpack --config webpack.config.analyze.js"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "26.0.13",
        "@types/lodash": "4.14.161",
        "@types/node": "14.6.3",
        "@typescript-eslint/eslint-plugin": "4.0.1",
        "@typescript-eslint/parser": "4.0.1",
        "clean-webpack-plugin": "3.0.0",
        "copy-webpack-plugin": "6.1.0",
        "eslint": "7.8.1",
        "eslint-import-resolver-typescript": "2.3.0",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-jest": "23.20.0",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-security": "1.4.0",
        "file-loader": "6.1.0",
        "husky": "4.2.5",
        "jest": "26.4.2",
        "lint-staged": "10.2.13",
        "prettier": "2.1.1",
        "ts-jest": "26.3.0",
        "ts-loader": "8.0.3",
        "typescript": "4.0.2",
        "webpack": "4.44.1",
        "webpack-bundle-analyzer": "3.8.0",
        "webpack-cli": "3.3.12",
        "webpack-dev-server": "3.11.0",
        "webpack-merge": "5.1.3"
    },
    "dependencies": {
        "lodash": "4.17.20"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(ts|js)": [
            "eslint --fix"
        ],
        "*.json": [
            "prettier --write"
        ]
    }
}
