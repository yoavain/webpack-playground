{
    "name": "webpack-playground",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "postinstall": "git config --get core.hookspath || husky install",
        "build": "npm run eslint && npm run type-check && npm run test && npm run webpack",
        "start:dev": "webpack serve --mode=development",
        "eslint": "eslint src/ test/ webpack.config.*",
        "eslint:fix": "npm run eslint -- --fix",
        "prettier": "prettier --write *.json .eslintrc.json .prettierrc tsconfig.json tsconfig.build.json webpack.config*.js",
        "test": "jest --coverage",
        "type-check": "tsc --build tsconfig.json",
        "prewebpack": "rimraf dist",
        "webpack": "webpack --config webpack.config.ts",
        "webpack-analyze": "webpack --config webpack.config.analyze.ts",
        "webpack-find-duplicates": "webpack --config webpack.config.find-duplicates.ts",
        "pre-commit": "lint-staged"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "engines": {
        "node": ">=12 <15",
        "npm": "^6.0.0"
    },
    "devDependencies": {
        "@types/jest": "26.0.23",
        "@types/lodash": "4.14.170",
        "@types/node": "15.6.0",
        "@types/webpack": "5.28.0",
        "@typescript-eslint/eslint-plugin": "4.24.0",
        "@typescript-eslint/parser": "4.24.0",
        "copy-webpack-plugin": "9.0.0",
        "eslint": "7.27.0",
        "eslint-import-resolver-typescript": "2.4.0",
        "eslint-plugin-import": "2.23.3",
        "eslint-plugin-jest": "24.3.6",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-security": "1.4.0",
        "file-loader": "6.2.0",
        "husky": "6.0.0",
        "inspectpack": "4.7.1",
        "jest": "26.6.3",
        "lint-staged": "11.0.0",
        "prettier": "2.3.0",
        "rimraf": "3.0.2",
        "ts-jest": "26.5.6",
        "ts-loader": "9.2.2",
        "ts-node": "10.0.0",
        "typescript": "4.2.4",
        "webpack": "5.37.1",
        "webpack-bundle-analyzer": "4.4.2",
        "webpack-cli": "4.7.0",
        "webpack-dev-server": "3.11.2",
        "webpack-merge": "5.7.3"
    },
    "dependencies": {
        "lodash": "4.17.21"
    },
    "lint-staged": {
        "*.(ts|js)": [
            "eslint --fix"
        ],
        "*.json": [
            "prettier --write"
        ]
    }
}
