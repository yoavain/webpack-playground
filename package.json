{
    "name": "webpack-playground",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "npm run eslint && npm run type-check && npm run test && npm run webpack",
        "start:dev": "webpack-dev-server",
        "eslint": "eslint src/ test/ webpack.config.*",
        "eslint:fix": "npm run eslint -- --fix",
        "prettier": "prettier --write *.json .eslintrc.json .prettierrc tsconfig.json tsconfig.build.json webpack.config*.js",
        "test": "jest --coverage",
        "type-check": "tsc --build tsconfig.json",
        "webpack": "webpack --config webpack.config.ts",
        "webpack-analyze": "webpack --config webpack.config.analyze.ts",
        "webpack-find-duplicates": "webpack --config webpack.config.find-duplicates.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "26.0.20",
        "@types/lodash": "4.14.167",
        "@types/node": "14.14.21",
        "@types/webpack": "4.41.26",
        "@types/webpack-dev-server": "3.11.1",
        "@typescript-eslint/eslint-plugin": "4.13.0",
        "@typescript-eslint/parser": "4.13.0",
        "clean-webpack-plugin": "3.0.0",
        "copy-webpack-plugin": "7.0.0",
        "eslint": "7.17.0",
        "eslint-import-resolver-typescript": "2.3.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jest": "24.1.3",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-security": "1.4.0",
        "file-loader": "6.2.0",
        "husky": "4.3.7",
        "inspectpack": "4.5.2",
        "jest": "26.6.3",
        "lint-staged": "10.5.3",
        "prettier": "2.2.1",
        "ts-jest": "26.4.4",
        "ts-loader": "8.0.14",
        "ts-node": "9.1.1",
        "typescript": "4.1.3",
        "webpack": "5.15.0",
        "webpack-bundle-analyzer": "4.3.0",
        "webpack-cli": "4.3.1",
        "webpack-dev-server": "3.11.2",
        "webpack-merge": "5.7.3"
    },
    "dependencies": {
        "lodash": "4.17.20"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(ts|js)": [
            "eslint --fix"
        ],
        "*.json": [
            "prettier --write"
        ]
    }
}
