{
    "name": "webpack-playground",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "postinstall": "git config --get core.hookspath || husky install",
        "build": "npm run eslint && npm run type-check && npm run test && npm run webpack",
        "start:dev": "webpack serve --mode=development",
        "eslint": "eslint src/ test/ webpack.config.*",
        "eslint:fix": "npm run eslint -- --fix",
        "prettier": "prettier --write *.json .eslintrc.json .prettierrc tsconfig.json tsconfig.build.json webpack.config*.js",
        "test": "jest --coverage",
        "type-check": "tsc --build tsconfig.json",
        "prewebpack": "rimraf dist",
        "webpack": "webpack --config webpack.config.ts",
        "webpack-analyze": "webpack --config webpack.config.analyze.ts",
        "webpack-find-duplicates": "webpack --config webpack.config.find-duplicates.ts",
        "pre-commit": "lint-staged"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "engines": {
        "node": ">=12 <17",
        "npm": "<9"
    },
    "devDependencies": {
        "@jest/types": "27.5.1",
        "@types/jest": "27.4.1",
        "@types/lodash": "4.14.182",
        "@types/node": "17.0.23",
        "@types/webpack": "5.28.0",
        "@typescript-eslint/eslint-plugin": "5.19.0",
        "@typescript-eslint/parser": "5.19.0",
        "copy-webpack-plugin": "10.2.4",
        "eslint": "8.13.0",
        "eslint-import-resolver-typescript": "2.7.1",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-jest": "26.1.4",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-security": "1.4.0",
        "file-loader": "6.2.0",
        "husky": "7.0.4",
        "inspectpack": "4.7.1",
        "jest": "27.5.1",
        "lint-staged": "12.3.8",
        "prettier": "2.6.2",
        "rimraf": "3.0.2",
        "ts-jest": "27.1.4",
        "ts-loader": "9.2.8",
        "ts-node": "10.7.0",
        "typescript": "4.6.3",
        "webpack": "5.72.0",
        "webpack-bundle-analyzer": "4.5.0",
        "webpack-cli": "4.9.2",
        "webpack-dev-server": "4.8.1",
        "webpack-merge": "5.8.0"
    },
    "dependencies": {
        "lodash": "4.17.21"
    },
    "lint-staged": {
        "*.(ts|js)": [
            "eslint --fix"
        ],
        "*.json": [
            "prettier --write"
        ]
    }
}
