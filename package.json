{
    "name": "webpack-playground",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "npm run eslint && npm run type-check && npm run test && npm run webpack-find-duplicates",
        "start:dev": "webpack-dev-server",
        "eslint": "eslint src/ test/",
        "eslint:fix": "npm run eslint -- --fix",
        "prettier": "prettier --write *.json .eslintrc.json .prettierrc tsconfig.json webpack.config*.js",
        "test": "jest --coverage",
        "type-check": "tsc --build tsconfig.all.json",
        "webpack": "webpack",
        "webpack-analyze": "webpack --config webpack.config.analyze.js",
        "webpack-find-duplicates": "webpack --config webpack.config.find-duplicates.js"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "26.0.15",
        "@types/lodash": "4.14.162",
        "@types/node": "14.14.5",
        "@typescript-eslint/eslint-plugin": "4.6.0",
        "@typescript-eslint/parser": "4.6.0",
        "clean-webpack-plugin": "3.0.0",
        "copy-webpack-plugin": "6.2.1",
        "eslint": "7.12.1",
        "eslint-import-resolver-typescript": "2.3.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jest": "24.1.0",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-security": "1.4.0",
        "file-loader": "6.2.0",
        "husky": "4.3.0",
        "inspectpack": "4.5.2",
        "jest": "26.6.1",
        "lint-staged": "10.5.0",
        "prettier": "2.1.2",
        "ts-jest": "26.4.3",
        "ts-loader": "8.0.7",
        "typescript": "4.0.5",
        "webpack": "5.3.0",
        "webpack-bundle-analyzer": "3.9.0",
        "webpack-cli": "4.1.0",
        "webpack-dev-server": "3.11.0",
        "webpack-merge": "5.2.0"
    },
    "dependencies": {
        "lodash": "4.17.20"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(ts|js)": [
            "eslint --fix"
        ],
        "*.json": [
            "prettier --write"
        ]
    }
}
