{
    "name": "webpack-playground",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "npm run eslint && npm run type-check && npm run test && npm run webpack",
        "start:dev": "webpack-dev-server",
        "eslint": "eslint src/ test/",
        "eslint:fix": "npm run eslint -- --fix",
        "prettier": "prettier --write *.json .eslintrc.json .prettierrc tsconfig.json webpack.config.js",
        "test": "jest --coverage",
        "type-check": "tsc --build tsconfig.all.json",
        "webpack": "webpack",
        "webpack-analyze": "webpack --config webpack.config.analyze.js"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "26.0.7",
        "@types/lodash": "4.14.158",
        "@types/node": "14.0.26",
        "@typescript-eslint/eslint-plugin": "3.7.1",
        "@typescript-eslint/parser": "3.7.1",
        "clean-webpack-plugin": "3.0.0",
        "copy-webpack-plugin": "6.0.3",
        "eslint": "7.5.0",
        "eslint-import-resolver-typescript": "2.0.0",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-jest": "23.18.2",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-security": "1.4.0",
        "file-loader": "6.0.0",
        "husky": "4.2.5",
        "jest": "26.1.0",
        "lint-staged": "10.2.11",
        "prettier": "2.0.5",
        "ts-jest": "26.1.3",
        "ts-loader": "8.0.1",
        "typescript": "3.9.7",
        "webpack": "4.44.0",
        "webpack-bundle-analyzer": "3.8.0",
        "webpack-cli": "3.3.12",
        "webpack-dev-server": "3.11.0",
        "webpack-merge": "5.0.9"
    },
    "dependencies": {
        "lodash": "4.17.19"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(ts|js)": [
            "eslint --fix"
        ],
        "*.json": [
            "prettier --write"
        ]
    }
}
